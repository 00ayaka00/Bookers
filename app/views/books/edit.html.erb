<p id ="notice">
<%= flash[:notice] %>
</p>

<h1>Editing Book</h1>



<div class="errors">
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <u1>
        <% @book.errors.full_messages.each do |massage| %>
          <li><%= massage %></li>
        <% end %>
    </u1>
<% end %>
</div>




<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="field">
      <label for="book_title">Title</label>
    <div><%= f.text_field :title %></div>
  </div>

  <div class="field">
      <label for="book_body">Body</label>
    <div><%= f.text_area :body %></div>
  <br><%= f.submit 'Update Book' %></br>
  
  <br><%= link_to "Show", book_path(@book) %>
  <%= link_to "Back", "/books", class: "hoge" %></br>

<% end %>