<h2>New Book</h2>
<% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <u1>
        <% @book.errors.full_messages.each do |massage| %>
          <li><%= massage %></li>
        <% end %>
    </u1>
<% end %>

<%= form_with model: @book,url: books_path,method: :post  do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
	
  <p>Body</p>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>